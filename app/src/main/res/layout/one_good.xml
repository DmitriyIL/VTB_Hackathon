<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_commodity_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Вино совиньон"
        android:textColor="@color/col_black"
        app:layout_constraintEnd_toStartOf="@+id/down_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/down_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/one_good_occupied_count"
        app:layout_constraintEnd_toStartOf="@+id/one_good_occupied_count"
        app:layout_constraintTop_toTopOf="@+id/one_good_occupied_count"
        app:srcCompat="@drawable/ic_arrow_circle" />

    <TextView
        android:id="@+id/item_commodity_tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:text="2750"
        android:textColor="@color/col_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_commodity_tv_name" />

    <ImageView
        android:id="@+id/up_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_circle_right" />

    <TextView
        android:id="@+id/one_good_occupied_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/one_good_total_count"
        app:layout_constraintEnd_toStartOf="@+id/one_good_total_count"
        app:layout_constraintTop_toTopOf="@+id/one_good_total_count" />

    <TextView
        android:id="@+id/one_good_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/up_count"
        app:layout_constraintEnd_toStartOf="@+id/up_count"
        app:layout_constraintTop_toTopOf="@+id/up_count" />

</androidx.constraintlayout.widget.ConstraintLayout>